@model LeaderboardViewModel
@{
    ViewData["Title"] = "Leaderboard";
    ViewData["Description"] = "Check our always updated leaderboard for RM.";
    ViewData["OgDescription"] = "Check our always updated leaderboard.";
    ViewData["OgImage"]="https://age-of-queens.com/images/og/age_of_queens_banner.png";
    ViewData["OgUrl"] = "https://age-of-queens.com/Leaderboard";
}

<div class="container">
    <h1>Leaderboard RM</h1>
    <span class="annotation">
        Data provided by Julinse <br />
        If you want to be included in the leaderboard go to the pinned messages on the Age of Queens Discord server in #announcements for further instructions
    </span>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Rank</th>
                <th scope="col">Name</th>
                <th scope="col">Elo</th>
                <th scope="col">Highest Elo</th>
                <th scope="col">Country</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.LeaderboardPlayerListRM != null)
            {
                int rankNumber = 0;
                foreach (LeaderboardViewModel.LeaderboardPlayer item in Model.LeaderboardPlayerListRM)
                {
                    rankNumber += 1;
                    <tr onclick="window.open('https://aoe2.net/#profile-@item.Id')" class="clickable-hover">
                        <th scope="row">@rankNumber</th>
                        <th>@item.Name</th>
                        <td>@item.Rating</td>
                        <td>@item.HighestRating</td>
                        <td>@item.Country</td>
                    </tr>
                }
            }
            else
            {
                <div class="alert alert-warning" role="alert">Error while loading the content.</div>
            }
        </tbody>
    </table>
</div>